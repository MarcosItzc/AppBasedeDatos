<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uso de base de datos"
        android:textAlignment="center"
        android:textSize="25dp"/>
    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese c贸digo"
        android:inputType="number"
        android:textSize="25dp"/>
    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese descripci贸n"
        android:textSize="25dp"
        android:inputType="textPersonName"/>
    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese precio"
        android:textSize="25dp"
        android:inputType="numberDecimal"/>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="alta"
                android:text="Alta"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="consultaporcodigo"
                android:text="Consulta por codigo"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="consultapordescripcion"
                android:text="Consulta por Descripci贸n"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="bajaporcodigo"
                android:text="Baja por Codigo"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="modificacion"
                android:text="Modificaci贸n"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="limpiar"
                android:text="Limpiar Registros"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="listar"
                android:text="Listar Articulos"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="salir"
                android:text="Salir"
                android:textSize="20dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>